FROM golang:1.13.10-alpine3.10 as builder
WORKDIR /go/src/sigs.k8s.io/csi-driver-nfs
ADD . .
ARG LDFLAGS
RUN CGO_ENABLED=0 GOOS=linux go build -a -ldflags "${LDFLAGS:--X sigs.k8s.io/csi-driver-nfs/pkg/nfs.driverVersion=latest}" -o _output/nfsplugin ./pkg/nfsplugin

FROM k8s.gcr.io/build-image/debian-base-amd64:v2.1.3
COPY --from=builder /go/src/sigs.k8s.io/csi-driver-nfs/_output/nfsplugin /nfsplugin
RUN clean-install ca-certificates cifs-utils util-linux e2fsprogs mount udev xfsprogs

LABEL maintainers="andyzhangx"
LABEL description="SMB CSI Driver"

# Create a nonroot user
RUN useradd -u 10001 nonroot
USER nonroot

COPY ./_output/nfsplugin /nfsplugin
ENTRYPOINT ["/nfsplugin"]